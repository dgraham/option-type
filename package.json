{
  "name": "option-type",
  "version": "0.1.1",
  "description": "An Option type for Flow, inspired by Rust.",
  "repository": "dgraham/option-type",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "flow": "flow check",
    "lint": "eslint *.js test/",
    "prebuild": "npm run clean && npm run flow && npm run lint",
    "build": "babel index.js -d dist/ && cp index.js dist/index.js.flow",
    "pretest": "npm run flow && npm run lint",
    "test": "mocha --require babel-register",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "optional",
    "option",
    "some",
    "none",
    "maybe"
  ],
  "author": "David Graham",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.6.0",
    "eslint-plugin-prettier": "^2.2.0",
    "flow-bin": "^0.54.0",
    "mocha": "^3.5.0",
    "prettier": "^1.6.1"
  },
  "files": [
    "index.js",
    "dist"
  ]
}
